<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GitZaria Shop"
        android:textAllCaps="true"
        android:textColor="#F44336"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="101dp"
        android:layout_height="94dp"
        app:srcCompat="@drawable/images"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="80dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="96dp"
        android:layout_height="97dp"
        app:srcCompat="@drawable/images"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="80dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="216dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toppings:  ($2 each)"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="216dp" />

    <RadioGroup
        android:layout_width="170dp"
        android:layout_height="146dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="251dp">

        <RadioButton
            android:id="@+id/rdB1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rdBClick"
            android:text="Small:          $5" />

        <RadioButton
            android:id="@+id/rdB2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rdBClick"
            android:text="Medium:     $7" />

        <RadioButton
            android:id="@+id/rdB3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rdBClick"
            android:text="Large:         $10" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="140dp"
        android:layout_height="47dp"
        android:text="Meatball          $2"
         tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="251dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Onions             $2"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="299dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peppers           $2"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="347dp" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mushrooms    $2"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="394dp" />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pineapple        $2"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="442dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="101dp"
        android:layout_height="30dp"
        android:text="Donate $1 "
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="442dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="442dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order now"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="676dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="535dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="535dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="289dp"
        tools:layout_editor_absoluteY="535dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price Total: "
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="617dp" />





</androidx.constraintlayout.widget.ConstraintLayout>